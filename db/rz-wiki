RZPM_BEGIN

RZPM_GIT "https://github.com/securisec/rzwiki"
RZPM_DESC "[rzwiki] an internal wiki for rz"

RZPM_DOC="
usage: '$'wiki [-h] [-a] [-l] what_to_search_for

positional arguments:
  what_to_search_for  What to search for. Supports regex . Triple escape
                      escapes. \\

optional arguments:
  -h, --help          show this help message and exit
  -a                  Will match any of the words.
  -l                  Show the corresponding rzwiki link
  -u                  Update rzwiki with latest content

Invoke from inside rz shell with $wiki
To update, use $wiki -u ''
"

RZPM_INSTALL() {
	pip install --user Pygments
	echo '$'wiki="#"'!'"pipe python ${RZPM_GITDIR}rzwiki/rzwiki.py" >> ~/.rizinrc || exit 1
	echo "\n[+] rzwiki has been installed"
}

RZPM_UNINSTALL() {
	rm -rf "${RZPM_GITDIR}"rzwiki
}

RZPM_END
