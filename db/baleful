RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-extras"
RZPM_DESC "[r2-arch] Baleful VM disassembler and analyzer"

RZPM_INSTALL() {
#	export PKG_CONFIG_PATH="${RZPM_PREFIX}/lib/pkgconfig"
	./configure --prefix="${RZPM_PREFIX}" || exit 1
	cd baleful || exit 1
	${MAKE} clean
	${MAKE} || exit 1
	${MAKE} install RZPM_PLUGDIR="${RZPM_PLUGDIR}" || exit 1
}

RZPM_UNINSTALL() {
	cd baleful
	${MAKE} uninstall RZPM_PLUGDIR="${RZPM_PLUGDIR}"
}

RZPM_END
