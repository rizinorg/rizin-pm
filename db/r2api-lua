RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-bindings"
RZPM_DESC "[r2-api] Native Lua API bindings"

RZPM_INSTALL() {
	./configure --prefix="${RZPM_PREFIX}" --enable=lua || exit 1
	${RZPM_SUDO} ${MAKE} install-vapi DESTDIR="${RZPM_DESTDIR}" || exit 1
	cd lua
	${MAKE} clean
	${MAKE} || exit 1
	${RZPM_SUDO} ${MAKE} install DESTDIR="${RZPM_DESTDIR}" || exit 1
}

RZPM_UNINSTALL() {
	cd lua
	${RZPM_SUDO uninstall
}

RZPM_END
