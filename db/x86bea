RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-extras"
RZPM_DESC "[r2-arch] X86 BeaEngine Disassembler"

RZPM_INSTALL() {
	./configure --prefix="${RZPM_PREFIX}" || exit 1
	cd libr || exit 1
	${MAKE} clean
	${MAKE} bea || exit 1
	${MAKE} bea-install RZPM_PLUGDIR="${RZPM_PLUGDIR}" || exit 1
}

RZPM_UNINSTALL() {
	cd baleful
	rm -f "${RZPM_PLUGDIR}"/*bea*
}

RZPM_END
