RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-extras"
RZPM_DESC "[r2-arch] m68k disassembler and analyzer"

RZPM_INSTALL() {
	./configure --prefix="${RZPM_PREFIX}" || exit 1
	cd libr
	${MAKE} clean
	${MAKE} m68k || exit 1
	${MAKE} m68k-install RZPM_PLUGDIR="${RZPM_PLUGDIR}"
}

RZPM_UNINSTALL() {
	rm -f "${RZPM_PLUGDIR}/asm_m68k_net."*
	rm -f "${RZPM_PLUGDIR}/anal_m68k_net."*
}

RZPM_END
