RZPM_BEGIN

RZPM_GIT "https://github.com/radare/acr"
RZPM_DESC "[syspkg] ACR autoconf replacement"

RZPM_INSTALL() {
	${MAKE} clean
	./configure --prefix="${RZPM_PREFIX}" || exit 1
	${MAKE} PREFIX="${RZPM_PREFIX}" || exit 1
	if [ "${GLOBAL}" = 1 ]; then
		${SUDO} ${MAKE} install PREFIX="${RZPM_PREFIX}" || exit 1
	else
		${MAKE} install PREFIX="${RZPM_PREFIX}" || exit 1
	fi
}

RZPM_UNINSTALL() {
	${SUDO} ${MAKE} uninstall PREFIX="${RZPM_PREFIX}"
}

RZPM_END
