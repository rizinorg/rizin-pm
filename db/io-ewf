RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-extras"
RZPM_DESC "[r2-io] EWF Forensic Image Loader"

RZPM_INSTALL() {
	./configure --prefix="${RZPM_PREFIX}" || exit 1
	cd libr/io/p || exit 1
	${MAKE} clean
	${MAKE} ewf || RZPM_FAIL Build
	${MAKE} ewf-install || RZPM_FAIL Install
}

RZPM_UNINSTALL() {
	cd libr/io/p
	${MAKE} ewf-uninstall || RZPM_FAIL
}

RZPM_END
