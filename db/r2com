RZPM_BEGIN

RZPM_GIT "https://github.com/newlog/r2com"
RZPM_DESC "[r2-r2pipe-python] COM object identification. A comment specifying the COM object will be added before CoCreateInstance call"

RZPM_INSTALL() {
    mkdir -p "${RZPM_ETCD}" || exit 1
    echo '$r2com=#!pipe python '"'$(pwd)'"'/r2com.py' > "${RZPM_ETCD}/r2com" || exit 1
}

RZPM_UNINSTALL() {
    rm -f "${RZPM_ETCD}"/r2com
}

RZPM_END
