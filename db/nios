RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-extras"
RZPM_DESC "[r2-arch] Support for Altera Nios embedded processor disassembly"

RZPM_INSTALL() {
	./configure --prefix="${RZPM_PREFIX}" || exit 1
	${MAKE} -C libr clean
	${MAKE} -C libr nios || exit 1
	${MAKE} -C libr nios-install RZPM_PLUGDIR="${RZPM_PLUGDIR}"
}

RZPM_UNINSTALL() {
	rm -f "${RZPM_PLUGDIR}/asm_nios."*
}

RZPM_END
