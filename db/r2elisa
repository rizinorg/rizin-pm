RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-extras"
RZPM_DESC "[r2-bin] r2elisa - conversational r2 shell"

B="${RZPM_PREFIX}/bin/r2elisa"

RZPM_INSTALL() {
	cd r2elisa
	npm i
	echo "#!/bin/sh" > $B
	echo "node $PWD/index.js" '$*' >> $B
	chmod +x $B
}

RZPM_UNINSTALL() {
	rm -f "${B}"
}

RZPM_END
