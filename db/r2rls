RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-release"
RZPM_DESC "[r2-tool] radare2 releasing machinery"

RZPM_INSTALL() {
	$MAKE CONFIG
	if [ "${GLOBAL}" = 1 ]; then
		$MAKE install
	else
		$MAKE install PREFIX=${RZPM_PREFIX}
	fi
}

RZPM_UNINSTALL() {
	$MAKE CONFIG
	if [ "${GLOBAL}" = 1 ]; then
		$MAKE uninstall
	else
		$MAKE uninstall PREFIX="${RZPM_PREFIX}"
	fi
}

RZPM_END
