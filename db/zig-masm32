RZPM_BEGIN

RZPM_DESC "[rz-zig] Get zignatures for MASM32 libraries"

USER_ZIGNS="$(rz -hh|grep USER_ZIGNS|awk '{print $2}')"

RZPM_INSTALL() {
	eval mkdir -p "${USER_ZIGNS}"
	eval cd "${USER_ZIGNS}"
	wget https://github.com/rizinorg/rizin-sigs/releases/download/v1.0/masm32.zip
	unzip masm32.zip
	rm masm32.zip
	exit 1
}

RZPM_UNINSTALL() {
	eval rm "${USER_ZIGNS}/masm32.zig.gz"
	exit 1
}

RZPM_END
