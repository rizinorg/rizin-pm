RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-rlang"
RZPM_DESC "[rlang] Lua r2pipe/RLang plugin"

RZPM_INSTALL() {
	./configure --prefix="${RZPM_PREFIX}" || exit 1
	${MAKE} -C lua || exit 1
	${RZPM_SUDO} ${MAKE} -C lua install || exit 1
}

RZPM_UNINSTALL() {
	${RZPM_SUDO} ${MAKE} -C lua uninstall
}

RZPM_END
