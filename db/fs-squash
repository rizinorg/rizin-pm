RZPM_BEGIN

RZPM_GIT "https://github.com/rizinorg/rizin-extras"
RZPM_DESC "[rz-fs] read-only SquashFS read support"

RZPM_INSTALL() {
	./configure --prefix="${RZPM_PREFIX}" || exit 1
	cd libr/fs/squashfs || exit 1
	${MAKE}
}

RZPM_UNINSTALL() {
	cd `rizin -H USER_PLUGINS` && rm -f fs_squash*
}

RZPM_END
