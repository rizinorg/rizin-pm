RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-bindings"
RZPM_DESC "[r2-script] Native Perl API bindings"

RZPM_INSTALL() {
	./configure --prefix="${RZPM_PREFIX}" --enable=perl || exit 1
	${SUDO} $MAKE install-vapi DESTDIR="${RZPM_DESTDIR}" || exit 1
	cd perl
	$MAKE clean
	$MAKE || exit 1
	sudo $MAKE install DESTDIR="${RZPM_DESTDIR}" || exit 1
}

RZPM_UNINSTALL() {
	cd perl
	$MAKE uninstall
}

RZPM_END
