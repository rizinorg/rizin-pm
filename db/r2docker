RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2"
RZPM_DESC "[syspkg] radare2 docker image on Ubuntu"

RZPM_INSTALL() {
	docker build -t r2docker .
	echo
	echo "Run docker run -ti r2docker"
	echo
	BIN="${RZPM_PREFIX}/bin/r2docker"
	echo '#!/bin/sh' > $BIN
	echo 'docker run -ti r2docker' >> $BIN
	chmod +x $BIN
}

RZPM_UNINSTALL() {
	docker rmi -f r2docker
}

RZPM_END
