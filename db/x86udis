RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-extras"
RZPM_DESC "[r2-arch] X86 Udis86 Disassembler"

RZPM_INSTALL() {
	./configure --prefix="${RZPM_PREFIX}" || exit 1
	cd libr || exit 1
	${MAKE} clean
	${MAKE} udis86 || exit 1
	${MAKE} udis86-install RZPM_PLUGDIR="${RZPM_PLUGDIR}" || exit 1
}

RZPM_UNINSTALL() {
	rm -f "${RZPM_PLUGDIR}"/*udis*
}

RZPM_END
