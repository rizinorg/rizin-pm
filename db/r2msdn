RZPM_BEGIN

RZPM_GIT "https://github.com/securisec/r2msdn"
RZPM_DESC "[r2msdn] annotate PE/COFF Windows function arguments and built in help"

RZPM_DOC="
usage: $r2msdn [-h] [-v] [-i INFO]

optional arguments:
  -h, --help  show this help message and exit
  -v          Verbose mode
  -i INFO     Show info about a function

Invoke from inside r2 shell with $r2msdn
"

RZPM_INSTALL() {
    tar xf ${RZPM_GITDIR}/r2msdn/r2msdn.tar.gz -C ${RZPM_GITDIR}r2msdn
	echo '$'r2msdn="#"'!'"pipe python ${RZPM_GITDIR}/r2msdn/r2msdn.py" >> ~/.radare2rc || exit 1
	echo "\n[+] r2msdn has been installed"
}

RZPM_UNINSTALL() {
	rm -rf "${RZPM_GITDIR}"/r2msdn
}

RZPM_END
