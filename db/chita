RZPM_BEGIN

RZPM_GIT "https://github.com/jpenalbae/chita"
RZPM_DESC "[r2-r2pipe-node] Exploiting helper"

BINDIR="${RZPM_BINDIR}"

RZPM_INSTALL() {
	node --version || exit 1
	npm install || exit 1
	mkdir -p "${RZPM_BINDIR}" || exit 1
	echo '#!/bin/sh' > "${RZPM_BINDIR}/chita" || exit 1
	echo "exec node '`pwd`'"'/chita.js $*' >> "${RZPM_BINDIR}/chita" || exit 1
	chmod +x "${RZPM_BINDIR}"/chita || exit 1
}

RZPM_UNINSTALL() {
	rm -f "${BINDIR}"/chita
	rm -rf "${RZPM_GITDIR}"/chita
}

RZPM_END
