RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-extras"
RZPM_DESC "[r2-core] yara plugin for radare2"

RZPM_INSTALL() {
	cd yara/yara
	export EXT_SO=$(r2 -hh|grep LIBEXT|awk '{print $2}')
	./configure --prefix="${RZPM_PREFIX}" || RZPM_FAIL "Configure"
	${MAKE} || RZPM_FAIL "Build"
	${MAKE} install || RZPM_FAIL "Install"
}

RZPM_UNINSTALL() {
	${MAKE} uninstall
}

RZPM_END
