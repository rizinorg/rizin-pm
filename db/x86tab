RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-extras"
RZPM_DESC "[r2-arch] X86 Tab Assembler"

RZPM_INSTALL() {
	./configure --prefix="${RZPM_PREFIX}" || exit 1
	cd libr || exit 1
	${MAKE} clean
	${MAKE} tab || exit 1
	${MAKE} tab-install RZPM_PLUGDIR="${RZPM_PLUGDIR}" || exit 1
}

RZPM_UNINSTALL() {
	cd baleful
	rm -f "${RZPM_PLUGDIR}"/*tab*
}

RZPM_END
