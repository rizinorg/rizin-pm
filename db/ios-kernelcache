RZPM_BEGIN

RZPM_GIT "https://github.com/mrmacete/r2-ios-kernelcache"
RZPM_DESC "[r2] kernelcache loader for radare2"

RZPM_INSTALL() {
	${MAKE} clean
	${MAKE} || exit 1
        export LIBEXT="`r2 -H LIBEXT`"
	cp -f bin_kernelcache.${LIBEXT} "${RZPM_PLUGDIR}" || exit 1
}

RZPM_UNINSTALL() {
        export LIBEXT="`r2 -H LIBEXT`"
	rm -f "${RZPM_PLUGDIR}/bin_kernelcache.${LIBEXT}" || exit 1
	${MAKE} uninstall
}

RZPM_END
