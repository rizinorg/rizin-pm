RZPM_BEGIN

RZPM_GIT "https://github.com/securisec/r2retdec"
RZPM_DESC "[r2retdec] Use local opensource retdec to decompile functions"

RZPM_DOC="
usage: $r2retdec [-h] [-p] [-t FILE]

r2retdec help

Optional arguments:
  -h, --help  Show this help message and exit.
  -t TMP      Set temp file for decompiled code
  -p          Print decompilation to stdout

Invoke from inside r2 shell with $dec
"

RZPM_INSTALL() {
	cd ${RZPM_GITDIR}/r2retdec
	npm install || exit 1
	cd -
	echo "Usage: #!pipe r2retdec"
	echo " - Open the file: r2 -A /bin/ls"
	echo " - Type: #!pipe r2retdec"
	echo "Function must be analyzed to get be able to decompile it"
	ln -fs "${RZPM_GITDIR}/r2retdec/r2retdec.js" "${RZPM_BINDIR}/r2retdec"
	chmod +x "${RZPM_GITDIR}/r2retdec/r2retdec.js"
	if [ -x "${RZPM_GITDIR}/retdec/bin/retdec-decompiler.py" ]; then
		echo "${RZPM_GITDIR}/retdec/bin/retdec-decompiler.py" > ~/.r2retdec
	fi
}

RZPM_UNINSTALL() {
	#rm -rf "${RZPM_GITDIR}"/r2retdec
	rm -f "${RZPM_BINDIR}"/r2retdec
}

RZPM_END
