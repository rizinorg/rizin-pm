RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-extras"
RZPM_DESC "[tui-node] Bless-based radare2 TUI"

BINDIR="${RZPM_PLUGDIR}/../bin"

RZPM_INSTALL() {
	cd blessr2
	node --version || exit 1
	npm install || exit 1
	mkdir -p "${BINDIR}"
	echo '#!/bin/sh' > "${BINDIR}/blessr2"
	echo "exec node '`pwd`'"'/index.js $*' >> "${BINDIR}/blessr2"
	chmod +x "${BINDIR}"/blessr2
	echo "Include ${BINDIR} in your PATH"
}

RZPM_UNINSTALL() {
	rm -f "${BINDIR}"/blessr2
}

RZPM_END
