RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-extras"
RZPM_DESC "[r2-arch] Load SVD description files into r2"

RZPM_INSTALL() {
	cd r2svd || exit 1
	${RZPM_SUDO} pip3 install cmsis_svd
	${MAKE} install || exit 1
}

RZPM_UNINSTALL() {
	cd r2svd || exit 1
	${MAKE} uninstall "${RZPM_PLUGDIR}" || exit 1
}

RZPM_END
