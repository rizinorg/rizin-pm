RZPM_BEGIN

RZPM_GIT "https://github.com/rizinorg/rz-pipe"
RZPM_DESC "[rzpipe] API for C# and .Net"

RZPM_INSTALL() {
	cd dotnet
	if [ "${GLOBAL}" = 1 ]; then
		echo "Cannot install global dll yet"
		exit 1
	else
		${MAKE} -j2 || exit 1
		cp rzpipe.dll "${WRKDIR}" || exit 1
		echo "${WRKDIR}/rzpipe.dll"
	fi
}

RZPM_UNINSTALL() {
	if [ "${GLOBAL}" = 1 ]; then
		echo "Cannot uninstall global dll yet"
		exit 1
	else
		rm -f rzpipe.dll
	fi
}

RZPM_END
