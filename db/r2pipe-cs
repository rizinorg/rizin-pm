RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-r2pipe"
RZPM_DESC "[r2pipe] API for C# and .Net"

RZPM_INSTALL() {
	cd dotnet
	if [ "${GLOBAL}" = 1 ]; then
		echo "Cannot install global dll yet"
		exit 1
	else
		${MAKE} -j2 || exit 1
		cp r2pipe.dll "${WRKDIR}" || exit 1
		echo "${WRKDIR}/r2pipe.dll"
	fi
}

RZPM_UNINSTALL() {
	if [ "${GLOBAL}" = 1 ]; then
		echo "Cannot uninstall global dll yet"
		exit 1
	else
		rm -f r2pipe.dll
	fi
}

RZPM_END
