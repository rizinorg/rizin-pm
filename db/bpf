RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-extras"
RZPM_DESC "[r2-arch] BPF disassembler, analyzer, emulator"

RZPM_INSTALL() {
	cd bpf || exit 1
	${MAKE} clean
	${MAKE} || exit 1
	cp *.${LIBEXT} "${RZPM_PLUGDIR}" || exit 1
}

RZPM_UNINSTALL() {
	rm -f ${RZPM_PLUGDIR}/*bpf*
}

RZPM_END
