RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-extras"
RZPM_DESC "[r2-arch] Beyond Architecture 2 disassembler plugin"

RZPM_INSTALL() {
	./configure --prefix="${RZPM_PREFIX}" || exit 1
	cd libr/asm/p || exit 1
	${MAKE} clean
	${MAKE} || exit 1
	cp -f asm_ba2.${LIBEXT} "${RZPM_PLUGDIR}" || exit 1
}

RZPM_UNINSTALL() {
	rm -f "${RZPM_PLUGDIR}/asm_ba2."*
}

RZPM_END
