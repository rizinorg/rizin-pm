RZPM_BEGIN

RZPM_GIT "https://github.com/leberus/r2k"
RZPM_DESC "[r2k] Unstable Linux kernel module (from leberus/panda repository)"

RZPM_INSTALL() {
	${MAKE} || RZPM_FAIL "Build"
	#gzip -f r2kmod.ko || RZPM_FAIL "GZIP error"
	if [ "${GLOBAL}" = 1 ]; then
		#${MAKE} install || RZPM_FAIL "Install"
		sudo mkdir -p /lib/modules/$(uname -r)/kernel/drivers/misc/ || RZPM_FAIL "Cannot create install dir"
		#sudo cp -f r2kmod.ko.gz /lib/modules/$(uname -r)/kernel/drivers/misc/ || RZPM_FAIL "Permission denied"
		sudo cp -f r2kmod.ko /lib/modules/$(uname -r)/kernel/drivers/misc/ || RZPM_FAIL "Permission denied"
		sudo depmod -a
		sudo modprobe r2kmod
		echo "You should now run:"
		echo
		echo '$ sudo modprobe r2kmod'
		echo
		echo "WARNING: This module allows ANY user to read/write physical memory"
		echo "WARNING: Dont use it if you dont know what you are doing"
	else
		sudo insmod r2kmod.ko || RZPM_FAIL "Only installable globally with -gi"
	fi
}

RZPM_UNINSTALL() {
	if [ "${GLOBAL}" = 1 ]; then
		sudo rm -f /lib/modules/$(uname -r)/kernel/drivers/misc/r2k*.ko*
	fi
	sudo rmmod r2kmod
	#${MAKE} uninstall
}

RZPM_END
