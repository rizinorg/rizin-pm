RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/radare2-extras"
RZPM_DESC "[r2-arch] Support for the Jaguar GPU assembly"

RZPM_INSTALL() {
	./configure --prefix="${RZPM_PREFIX}" || exit 1
	cd jaguar-gpu || exit 1
	${MAKE} clean
	${MAKE} || exit 1
	${MAKE} install RZ_PLUGIN_PATH="${RZPM_PLUGDIR}" || exit 1
}

RZPM_UNINSTALL() {
	cd jaguar-gpu || exit 1
	${MAKE} uninstall "${RZPM_PLUGDIR}" || exit 1
}

RZPM_END

