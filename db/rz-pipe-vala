RZPM_BEGIN

RZPM_GIT "https://github.com/rizinorg/rizin-rzpipe"
RZPM_DESC "[rzpipe] API for Vala and C-Glib"

RZPM_INSTALL() {
	./configure --prefix="${RZPM_PREFIX}" || exit 1
	cd vala || exit 1
	if [ "${GLOBAL}" = 1 ]; then
		${MAKE} clean
		${MAKE} || exit 1
		${MAKE} install || exit 1
	else
		echo "Cannot install in home yet"
		exit 1
	fi
}

RZPM_UNINSTALL() {
	if [ "${GLOBAL}" = 1 ]; then
		${MAKE} uninstall
	else
		echo "Cannot uninstall from home yet"
		exit 1
	fi
}

RZPM_END
