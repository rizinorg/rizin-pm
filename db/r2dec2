RZPM_BEGIN

RZPM_GIT "https://github.com/radareorg/r2dec-js"
RZPM_DESC "[r2-plugin] r2dec core2 (do not use)"
BINDIR="${RZPM_BINDIR}"

RZPM_INSTALL() {
	cd ..
	[ ! -d r2dec2 ] && \
		git clone --branch core2 https://github.com/radareorg/r2dec-js r2dec2
	cd r2dec2 || exit 1
	git pull
	${MAKE} clean
	${MAKE} || exit 1
	${MAKE} install || exit 1
}

RZPM_UNINSTALL() {
	cd ../r2dec2
	${MAKE} uninstall || exit 1
}

RZPM_END
