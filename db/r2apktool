RZPM_BEGIN

RZPM_DESC "[r2-r2pipe-python] APK decompiler alternative to apktool"

RZPM_INSTALL() {
	rm "${RZPM_USRDIR}/git/r2apktool"
	wget -c https://raw.githubusercontent.com/h4ng3r/r2apktool/master/r2apktool.py \ 
		-O ${RZPM_BINDIR}/r2apktool
	chmod +x ${RZPM_BINDIR}/r2apktool
}

RZPM_UNINSTALL() {
	rm -f "${RZPM_BINDIR}"/r2apktool
}

RZPM_END

