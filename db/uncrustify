RZPM_BEGIN

RZPM_GIT https://github.com/uncrustify/uncrustify
RZPM_DESC "[syspkg] uncrustify"

RZPM_INSTALL() {
	mkdir build
	cd build || exit 1
	cmake .. || exit 1
	mkdir -p "${RZPM_BINDIR}" || exit 1
	${MAKE} -j4 || exit 1
	echo cp -f uncrustify "${RZPM_BINDIR}"
	cp -f uncrustify "${RZPM_BINDIR}" || exit  1
}

RZPM_UNINSTALL() {
	rm -f "${RZPM_BINDIR}"/uncrustify
}

RZPM_END
